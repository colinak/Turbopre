<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    
    <record id="view_quality_loans_returns_search" model="ir.ui.view">
      <field name="name">quality.loans.returns.search</field>
      <field name="model">quality.loans.returns</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Quality loans y returns">
          <field string="Pin Socilicitante" name="signature_applicant"/>
          <field string="Código Equipo" name="code"/>
          <field string="Equipo" name="equipment_id"/>
          <field string="Solicitante" name="applicant_id"/>
          <field string="Entrega" name="delivery_id"/>
          <filter string="Archivado" domain="[('active', '=', False)]" name="inactive"/>
          <group string="Group By">
            <filter string="Solicitante" name="parent" domain="" context="{'group_by': 'applicant_id'}"/>
            <filter string="Equipo" name="usage" domain="" context="{'group_by': 'equipment_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="view_quality_loans_returns_form" model="ir.ui.view">
      <field name="name">quality.loans.returns.form</field>
      <field name="model">quality.loans.returns</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Quality loans y returns">
          <sheet>
            <div class="oe_title">
              <label for="name" string="Descripción" class="oe_edit_only" />
              <h1>
                <field name="name" string="Descripción" style="width: 85%;"/>
              </h1>
            </div>
            <group col="4" string="Datos del Equipo">
              <field name="code" />
              <field name="equipment_id" />
              <field name="rango" />
              <field name="equipment_status_id" />
            </group>
            <group col="4" string="Datos de Salida">
              <field name="signature_applicant" />
              <field name="applicant_id" placeholder="Seleccione"/>
              <field name="signature_deliverer" />
              <field name="delivery_id" placeholder="Seleccione"/>
              <field name="deadline" placeholder="Seleccione"/>
            </group>
            <group col="4" string="Datos de Retorno">
              <field name="signature_deliverer2" />
              <field name="delivery2_id" placeholder="Seleccione" />
              <field name="receipt_signature" />
              <field name="receipt_id" placeholder="Seleccione" />
              <field name="entry_date" placeholder="Seleccione" string="Fecha de Retorno" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_quality_loans_returns_tree" model="ir.ui.view">
      <field name="name">quality.loans.returns.tree</field>
      <field name="model">quality.loans.returns</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Quality loans y returns" default_order="deadline desc" >
          <field name="code"/>
          <field name="equipment_id" placeholder="Seleccione" />
          <field name="rango" optional="hide"/>
          <field name="equipment_status_id" optional="hide"/>
          <field name="signature_applicant"/>
          <field name="applicant_id" placeholder="Seleccione" />
          <field name="deadline" placeholder="Seleccione" />
          <field name="signature_deliverer"/>
          <field name="delivery_id" placeholder="Seleccione" />
          <field name="entry_date" placeholder="Seleccione" />
          <field name="equipment_status_entry_id" placeholder="Seleccione"/>
          <field name="signature_deliverer2"/>
          <field name="receipt_signature"/>
        </tree>
      </field>
    </record>

    <record id="action_quality_loans_returns" model="ir.actions.act_window">
      <field name="name">Loans y Returns</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">quality.loans.returns</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_quality_loans_returns_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Loans
        </p>
      </field>
    </record>

    <menuitem
      id="menu_quality_loans_returns"
      name="Loans y Returns"
      parent="tbps_quality_equipment.menu_quality_equipment_operations"
      action="tbps_quality_equipment.action_quality_loans_returns"
      sequence="2"
      groups="base.group_system,group_quality_system,group_quality_manager,group_quality_user"
    />

  </data>
</odoo>
