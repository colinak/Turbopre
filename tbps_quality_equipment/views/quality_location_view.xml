<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="quality_location_view_search" model="ir.ui.view">
      <field name="name">quality.location.search</field>
      <field name="model">quality.location</field>
      <field name="arch" type="xml">
        <search string="Search">
          <field string="Ubicación" name="name"/>
          <field string="Location Parent" name="parent_id"/>
          <filter string="Scrap Location" domain="[('scrap_location', '=', True)]" name="scrap_location"/>
          <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
          <group string="Group By">
            <filter string="Parent" name="parent" domain="" context="{'group_by': 'parent_id'}"/>
            <filter string="Usage" name="usage" domain="" context="{'group_by': 'usage'}"/>
          </group>
       </search>
      </field>
    </record>
    
    <record id="quality_location_view_form" model="ir.ui.view">
      <field name="name">quality.location.form</field>
      <field name="model">quality.location</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <field name="active" invisible="True" />
            <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <div class="oe_button_box" name="button_box">
              <button string="Stock Actual" class="oe_stat_button" icon="fa-cubes"/>
            </div>
            <div class="oe_title">
              <label for="name" string="Nombre de la Ubicación" class="oe_edit_only" />
              <h1>
                <field name="name" string="Nombre" placeholder="Nombre Ubicación" style="width: 75%;"/>
              </h1>
              <label for="parent_id" string="Ubicación padre" class="oe_edit_only" />
              <h2>
                <field name="parent_id" style="width: 30%;" placeholder="Seleccione" />
              </h2>
            </div>
            <group col="4" string="Información Adicional">
              <!--<field name="warehouse_id"/>-->
              <field name="usage" string="Tipo de ubicación" />
              <field name="scrap_location" string="¿Es una ubicación de chatarra?" />
            </group>
            <group string="Notas Externas">
              <field name="comment" string="Información adicional" placeholder="Nota Externa..." />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="quality_location_view_tree" model="ir.ui.view">
      <field name="name">quality.location.tree</field>
      <field name="model">quality.location</field>
      <field name="arch" type="xml">
        <tree string="Locarions" 
          decoration-info="usage == 'virtual'"
          decoration-success="usage == 'internal'"
          decoration-warning="usage == 'external'"
          decoration-danger="usage == 'inventory'"
          decoration-muted="usage == 'supplier'"
          decoration-it="usage == 'transit'"
        >
          <field name="active" invisible="True" />
          <!--<field name="complete_name" />-->
          <field name="name" />
          <field name="parent_id" />
          <field name="usage" />
          <field name="scrap_location" />
        </tree>
      </field>
    </record>

    <record id="quality_location_action_settings" model="ir.actions.act_window">
      <field name="name">Locations</field>
      <field name="res_model">quality.location</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="quality_location_view_search"/>
      <field name="view_id" ref="quality_location_view_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add New Location
        </p>
      </field>
    </record>

    <menuitem
      id="menu_quality_location"
      name="Locations"
      parent="tbps_quality_equipment.menu_quality_equipment_setting"
      action="tbps_quality_equipment.quality_location_action_settings"
      groups="base.group_system,group_quality_system,group_quality_manager,group_quality_user"
      sequence="6"
    />

  </data>
</odoo>
