<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="tps_employee_view_kanban" model="ir.ui.view">
      <field name="name">tps.employee.kanban</field>
      <field name="model">tps.employee</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
          <field name="id" />
          <field name="image_128" />
          <field name="name" />
          <field name="job_id" />
          <field name="coach_id" />
          <field name="pin" />
          <field name="barcode" />
          <field name="department_id" />
          <field name="parent_id" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                <field name="image_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top">
                    <div class="o_kanban_record_headings">
                      <div>
                        <strong><field name="name"/></strong>
                      </div>
                      <span class="o_kanban_record_subtitle"><field name="job_id"/></span>
                      <span class="o_kanban_record_subtitle"><field name="coach_id"/></span>
                      <span class="o_kanban_record_subtitle"><field name="pin"/></span>
                      <span class="o_kanban_record_subtitle"><field name="barcode"/></span>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="tps_employee_view_search" model="ir.ui.view">
      <field name="name">tps.employee.search</field>
      <field name="model">tps.employee</field>
      <field name="arch" type="xml">
        <search string="Employee">
          <field string="Empleado" name="name"/>
          <field string="Departamento" name="department_id"/>
          <field string="Puesto de Trabajo" name="job_id"/>
          <field string="PIN" name="pin"/>
          <field string="Barcode" name="barcode"/>
          <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
          <group string="Group By">
            <filter string="Departamento" name="department" domain="" context="{'group_by': 'department_id'}"/>
            <filter string="Gerente de área" name="parent" domain="" context="{'group_by': 'parent_id'}"/>
            <filter string="Supervisor inmediato" name="coach" domain="" context="{'group_by': 'coach_id'}"/>
            <filter string="Puesto de trabajo" name="job" domain="" context="{'group_by': 'job_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="tps_employee_view_tree" model="ir.ui.view">
      <field name="name">quality.status.tree</field>
      <field name="model">tps.employee</field>
      <field name="arch" type="xml">
        <tree string="Empleados"
          decoration-danger="active == False"
        >
          <field name="active" invisible="True" />
          <field name="name"/>
          <field name="job_id"/>
          <field name="department_id"/>
          <field name="parent_id"/>
          <field name="coach_id" optional="hide"/>
          <field name="pin" optional="hide"/>
          <field name="barcode" optional="hide"/>
        </tree>
      </field>
    </record>

    <record id="tps_employee_view_form" model="ir.ui.view">
      <field name="name">tps.employee.form</field>
      <field name="model">tps.employee</field>
      <field name="arch" type="xml">
        <form string="Empleados" >
          <sheet>
            <field name="active" invisible="True" />
            <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <!--<field name="image_1920" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image_128&quot;}"/>-->
            <field name="image_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}'/>
            <div class="oe_title">
              <h1 class="d-flex">
                <field name="name" placeholder="Nombre del empleado" required="True" style="width: 70%;"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="department_id" placeholder="Seleccione"/>
                <field name="parent_id" placeholder="Seleccione"/>
                <field name="coach_id" placeholder="Seleccione"/>
              </group>
              <group>
                <field name="job_id" placeholder="seleccione"/>
                <field name="pin" placeholder="N° tarjeta magnetica"/>
                <field name="barcode" placeholder="N° carnet" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="tps_employee_action_view" model="ir.actions.act_window">
      <field name="name">Empleados</field>
      <field name="res_model">tps.employee</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="search_view_id" ref="tps_employee_view_search"/>
      <field name="view_id" ref="tps_employee_view_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add New Employee
        </p>
      </field>
    </record>

    <menuitem
      id="menu_tps_employee"
      name="Empleados"
      parent="tbps_quality_equipment.menu_quality_equipment_setting"
      action="tbps_quality_equipment.tps_employee_action_view"
      groups="base.group_system,group_quality_system,group_quality_manager,group_quality_user"
      sequence="7"
    />
  
  </data>
</odoo>

