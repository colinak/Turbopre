<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="view_quality_equitment_clasification_search" model="ir.ui.view">
      <field name="name">quality.equitment.clasification.search</field>
      <field name="model">quality.equitment.clasification</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Quality Clasification">
          <field string="Name" name="name"/>
        </search>
      </field>
    </record>

    <!--view kanban of Manufacturers-->
    <record id="view_quality_equitment_clasification_kanban" model="ir.ui.view">
      <field name="name">quality.equitment.clasification.kanban</field>
      <field name="model">quality.equitment.clasification</field>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
          <field name="id"/>
          <field name="name"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_vignette oe_semantic_html_override">
                <a type="open" href="#" class="o_kanban_image oe_kanban_action">
                  <img alt="Open" t-att-src="kanban_image('maintenance.manufacturers', 'image', record.id.raw_value)" class="img-fluid" style="width:100px;"/>
                </a>
                <div class="oe_kanban_details">
                  <h4 class="oe_partner_heading">
                    <a type="open" class="o_kanban_record_title">
                      <field name="name"/>
                    </a>
                  </h4>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="view_quality_equitment_clasification_form" model="ir.ui.view">
      <field name="name">quality.equitment.clasification.form</field>
      <field name="model">quality.equitment.clasification</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Quality Clasification">
          <sheet>
            <div class="oe_title">
              <field name="image" widget="image" class="oe_avatar" />
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" string="Name" placeholder="Clasification Name" style="width: 75%;"/>
              </h1>
            </div>
            <group>
              <field name="note" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_quality_equitment_clasification_tree" model="ir.ui.view">
      <field name="name">quality.equitment.clasification.tree</field>
      <field name="model">quality.equitment.clasification</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Quality Clasification">
          <field name="name" string="Name" />
        </tree>
      </field>
    </record>


    <record id="action_quality_equipment_clasification" model="ir.actions.act_window">
      <field name="name">Clasifications</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">quality.equitment.clasification</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="view_id" ref="view_quality_equitment_clasification_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Clasifications
        </p>
      </field>
    </record>
  
    <menuitem 
      id="menu_quality_equipment_clasificacion"
      name="Clasifications"
      parent="tbps_quality_equipment.menu_quality_equipment_setting"
      action="tbps_quality_equipment.action_quality_equipment_clasification"
      sequence="2"
      groups="base.group_system"
    />
  
  
  </data>
</odoo>



