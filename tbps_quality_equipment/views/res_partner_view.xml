<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    
    <record id="tps_res_partner_view_search" model="ir.ui.view">
      <field name="name">tps.res.partner.search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <search string="Proveedores">
          <field string="Nombre" name="name"/>
          <field string="Rif" name="vat"/>
          <!--<filter string="Individuos" domain="[('company_type', '=', 'person')]" name="person"/>-->
          <!--<filter string="Compañias" domain="[('company_type', '=', 'company')]" name="company"/>-->
          <filter string="Archivado" domain="[('active', '=', False)]" name="inactive"/>
          <group string="Group By">
            <filter string="Estado" name="state" domain="" context="{'group_by': 'state_id'}"/>
            <filter string="País" name="country" domain="" context="{'group_by': 'country_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="tps_res_partner_view_tree" model="ir.ui.view">
      <field name="name">tps.res.partner.tree</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <tree string="Proveedores">
          <field name="active" invisible="True" />
          <field name="name"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="vat" string="Rif"/>
        </tree>
      </field>
    </record>

    <record id="tps_res_partner_view_form" model="ir.ui.view">
      <field name="name">tps.res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form string="Empleados" >
          <sheet>
            <div class="oe_button_box" name="button_box"/>
            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
            <div class="oe_title">
              <field name="is_company" invisible="1"/>
              <field name="commercial_partner_id" invisible="1"/>
              <field name="active" invisible="1"/>
              <field name="supplier" default="True" invisible="True"/>
              <field name="company_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}" />
              <h1>
                <field name="name" default_focus="1" placeholder="Nombre" attrs="{'required' : [('type', '=', 'contact')]}" style="width: 75%;" />
              </h1>
              <div class="o_row" invisible="1">
                <field name="parent_id" widget="res_partner_many2one" placeholder="Company" domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                <field name="company_name" attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                <button name="create_company" icon="fa-plus-square" string="Create company" type="object" class="oe_edit_only btn-link" attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
              </div>
            </div>

            <group>
              <group>
                <field name="type" groups="base.group_no_one" invisible="True" attrs="{'readonly': [('user_ids', '!=', [])]}"/>
                <span class="o_form_label o_td_label" name="address_name">
                  <b>Dirección</b>
                </span>
                <div class="o_address_format">
                  <field name="street" placeholder="Calle..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                  <field name="street2" placeholder="Calle 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                  <field name="city" placeholder="Ciudad" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                  <field name="state_id" class="o_address_state" placeholder="Estado" options="{'no_open': True, 'no_quick_create': True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                  <field name="zip" placeholder="CP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                  <field name="country_id" placeholder="País" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                </div>
                <field name="vat" string="Rif" placeholder="Ejp. J-99999999-9" attrs="{'readonly': [('parent_id','!=',False)]}"/>
              </group>
              <group>
                <field name="function" placeholder="Ejp. Director de Ventas" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="phone" widget="phone"/>
                <field name="mobile" widget="phone"/>
                <field name="user_ids" invisible="1"/>
                <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'required': [('user_ids','!=', [])]}"/>
                <field name="website" widget="url" placeholder="Ejp. https://www.turbopre.com"/>
                <field name="title" options="{&quot;no_open&quot;: True}" placeholder="Ejp. Sr." attrs="{'invisible': [('is_company', '=', True)]}"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="tps_res_partner_action_view" model="ir.actions.act_window">
      <field name="name">Proveedores</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="search_view_id" ref="tps_res_partner_view_search"/>
      <field name="view_id" ref="tps_res_partner_view_tree" />
      <field name="context">{'supplier': True, 'default_supplier': True}</field>
      <field name="domain">[('supplier', '=', True)]</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Agregar Nuevo Proveedor
        </p>
      </field>
    </record>

    <record id="tps_inherit_res_partner_action_tree_view" model="ir.actions.act_window.view">
      <field name="sequence" eval="1"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="tps_res_partner_view_tree"/>
      <field name="act_window_id" ref="tps_res_partner_action_view"/>
    </record>

    <record id="tps_inherit_res_partner_action_form_view" model="ir.actions.act_window.view">
      <field eval="2" name="sequence"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="tps_res_partner_view_form"/>
      <field name="act_window_id" ref="tps_res_partner_action_view"/>
    </record>
      
    <menuitem
      id="menu_tps_res_partner"
      name="Proveedores"
      parent="tbps_quality_equipment.menu_quality_equipment_setting"
      action="tbps_quality_equipment.tps_res_partner_action_view"
      groups="base.group_system,group_quality_system,group_quality_manager,group_quality_user"
      sequence="8"
    />

  </data>
</odoo>
