<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="wizard_replace_equipment_form" model="ir.ui.view">
      <field name="name">replace.equipment.wizard.form</field>
      <field name="model">replace.equipment.wizard</field>
      <field name="arch" type="xml">
        <form string="Replace Equipment">
          <sheet>
            <div clas="oe_title">
              <label for="equipment_id" class="oe_edit_only"/>
              <h2>
                <field name="equipment_id" style="width: 50%;" />
              </h2>
            </div>
            <group>
              <group>
                <field name="equipment_name" readonly="1" />
                <field name="make" readonly="1" />
                <field name="model" readonly="1"/>
                <field name="no_serial" readonly="1"/>
              </group>
              <group>
                <field name="check_make" invisible="1"/>
                <field name="check_make" />
                <field name="check_model" />
                <field name="check_serial" />
              </group>
              <field name="observations" />
            </group>
            <!--<div class="text-muted">-->

            <!--</div>-->
            <footer>
              <button string="Confirm" name="confirm_replace_equipment" type="object" class="btn-primary"/>
              <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_replace_equipment" model="ir.actions.act_window">
      <field name="name">Replace Equipment</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">replace.equipment.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="tbps_maintenance.wizard_replace_equipment_form" />
      <field name="target">new</field>
    </record>

  </data>
</odoo>
