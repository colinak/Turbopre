<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="view_quadrant_tree" model="ir.ui.view">
      <field name="name">toolroom.quadrant.tree</field>
      <field name="model">toolroom.quadrant</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Quadrant" editable="bottom">
          <field name="name" />
        </tree>
      </field>
    </record>

    <record id="view_quadrant_search" model="ir.ui.view">
      <field name="name">toolroom.quadrant.search</field>
      <field name="model">toolroom.quadrant</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field string="Nombre" name="name"/>
            </search>
        </field>
    </record>


    <record id="action_quadrant" model="ir.actions.act_window">
      <field name="name">Quadrant</field>
      <field name="res_model">toolroom.quadrant</field>
      <field name="view_mode">tree,kanban</field>
      <field name="search_view_id" ref="view_quadrant_search"/>
      <field name="view_id" ref="view_quadrant_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add New Quadrant
        </p>
      </field>
    </record>

    <menuitem
      id="menu_quadrant"
      name="Quadrant"
      parent="tbps_toolroom.menu_toolroom_equipment_setting"
      action="tbps_toolroom.action_quadrant"
      groups="base.group_system"
      sequence="5"
    />

  </data>
</odoo>
