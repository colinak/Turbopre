<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_stock_inventory_serch" model="ir.ui.view">
      <field name="name">tr.stock.inventory.search</field>
      <field name="model">tr.stock.inventory</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Inventory">
          <field name="name" string="Referencia"/>
          <field name="product_ids" string="Producto" filter_domain="['|', ('product_ids', 'ilike', self), ('line_ids.product_id','ilike',self)]"/>
          <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
          <filter string="En Progreso" name="confirm" domain="[('state', '=', 'confirm')]"/>
          <filter string="Validado" name="done" domain="[('state', '=', 'done')]"/>
          <separator/>
          <filter string="Fecha de Inventario" name="inventory_date" date="date"/>
          <group expand="0" string="Group By">
              <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
              <!--<filter string="Inventory Date" name="inventories_month" domain="[]" context="{'group_by': 'date'}" help="Physical Inventories by Date"/>-->
          </group>
        </search>
      </field>
    </record>

    <record id="view_stock_inventory_form" model="ir.ui.view">
      <field name="name">tr.stock.inventory.form</field>
      <field name="model">tr.stock.inventory</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Inventory">
          <header>
            <button name="action_start" states="draft" string="Iniciar Inventario" type="object" class="oe_highlight" groups="tbps_toolroom.group_tools_user" />
            <button name="action_open_inventory_lines" states="confirm" string="Continuar Inventario" type="object" class="oe_highlight" groups="tbps_toolroom.group_tools_user" />
            <button name="action_validate" string="Validar Inventario" type="object" attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('line_ids', '!=', [])]}" groups="tbps_toolroom.group_tools_manager" />
            <button name="action_validate" string="Validar Inventario" type="object" attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('line_ids', '=', [])]}" class="oe_highlight" groups="tbps_toolroom.group_tools_manager" />
            <!--[><button name="action_print" string="Print Count Sheet" type="object" attrs="{'invisible': [('state', '=', 'draft')]}" groups="stock.group_stock_user"/><]-->
            <button name="action_cancel_draft" states="cancel" string="Establecer a borrador" type="object"/>
            <button name="action_cancel_draft" states="confirm" string="Cancelar Inventario" type="object" 
                confirm="Si cancela este ajuste de inventario, se perderán todas sus líneas de ajuste de inventario. ¿Estás seguro de que quieres descartarlo?"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
            <field name="company_id" invisible="1" />
          </header>
          <sheet>
            <field name="line_ids" invisible="1" />
            <div class="oe_title">
              <label for="name" string="Referencia de inventario" class="oe_edit_only" />
              <h1>
                <field name="name" placeholder="Ej: Inventario Anual" style="width: 75%;" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              </h1>
            </div>
            <group col="4" attrs="{'readonly': [('state', '!=', 'draft')]}">
              <field name="date" placeholder="Seleccione" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="activity_user_id" placeholder="Seleccione" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="company_id" invisible="True" />
            </group>
            <notebook>
              <page string="Lineas de Inventario" attrs="{'invisible': [('state', '=', 'draft')]}">
                <field name="line_ids" widget="one2many" readonly="True">
                  <tree editable="bottom">
                    <field name="product_id" placeholder="Seleccione" required="True" />
                    <field name="location_id" placeholder="Seleccione" required="True" />
                    <field name="prod_lot_id" placeholder="Seleccione" required="True" />
                    <field name="theoretical_qty"/>
                    <field name="product_qty"/>
                    <field name="product_uom_id"/>
                    <field name="inventory_date" optional="hide" readonly="True"/>
                  </tree>
                  <form>
                    <group col="4" name="main">
                      <field name="product_id"/>
                      <field name="prod_lot_id"/>
                      <field name="location_id"/>
                      <field name="product_qty"/>
                      <field name="theoretical_qty"/>
                      <field name="product_uom_id"/>
                      <field name="inventory_date" readonly="True"/>
                    </group>
                  </form>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_stock_inventory_tree" model="ir.ui.view">
      <field name="name">tr.stock.inventory.tree</field>
      <field name="model">tr.stock.inventory</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Inventory">
          <field name="date" />
          <field name="name" />
          <field name="activity_user_id" />
          <field name="state" string="Estado" widget="badge" decoration-success="state == 'done'" decoration-info="state in ('draft', 'confirm')" />
        </tree>
      </field>
    </record>

    <record id="action_stock_inventory" model="ir.actions.act_window">
      <field name="name">Ajustes de Inventario</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">tr.stock.inventory</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_stock_inventory_tree"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear Ajuste de Inventario
        </p>
      </field>
    </record>

    <menuitem 
      id="menu_toolroom_inventory"
      name="Ajustes de Inventario"
      parent="tbps_toolroom.menu_operations"
      action="tbps_toolroom.action_stock_inventory"
      sequence="5"
      groups="base.group_system,group_tools_system,group_tools_manager,group_tools_user"
    />

  </data>
</odoo>
