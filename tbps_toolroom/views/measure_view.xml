<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    
    <record id="view_measure_tree" model="ir.ui.view">
      <field name="name">toolroom.measure.tree</field>
      <field name="model">toolroom.measure</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Measure" editable="bottom">
          <field name="name" />
        </tree>
      </field>
    </record>

    <record id="view_measure_search" model="ir.ui.view">
      <field name="name">toolroom.measure.search</field>
      <field name="model">toolroom.measure</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field string="Nombre" name="name"/>
            </search>
        </field>
    </record>


    <record id="action_measure" model="ir.actions.act_window">
      <field name="name">Measure</field>
      <field name="res_model">toolroom.measure</field>
      <field name="view_mode">tree,kanban</field>
      <field name="search_view_id" ref="view_measure_search"/>
      <field name="view_id" ref="view_measure_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add New Measure
        </p>
      </field>
    </record>

    <menuitem
      id="menu_measure"
      name="Measure"
      parent="tbps_toolroom.menu_toolroom_equipment_setting"
      action="tbps_toolroom.action_measure"
      groups="base.group_system"
      sequence="4"
    />

  </data>
</odoo>
