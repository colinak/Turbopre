<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="view_toolroom_category_form" model="ir.ui.view">
      <field name="name">toolroom.category.form</field>
      <field name="model">toolroom.category</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Tools Category">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" string="Name" placeholder="Tools Category Name" style="width: 75%;"/>
              </h1>
            </div>
            <group col="4">
              <field name="technician_user_id" placeholder="Select"/>
              <field name="dpto_responsible_id" string="Dpto Responsible" placeholder="Select" />
            </group>
            <group>
              <field name="note" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_toolroom_category_tree" model="ir.ui.view">
      <field name="name">toolroom.category.tree</field>
      <field name="model">toolroom.category</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Tools Category">
          <field name="name" string="Name" />
          <field name="technician_user_id" />
          <field name="dpto_responsible_id" />
          <field name="note" />
        </tree>
      </field>
    </record>


    <record id="action_tools_category" model="ir.actions.act_window">
      <field name="name">Tools of Category</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">toolroom.category</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_toolroom_category_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Tools Category
        </p>
      </field>
    </record>
  
    <menuitem 
      id="menu_tools_category"
      name="Tools of Category"
      parent="tbps_toolroom.menu_toolroom_equipment_setting"
      action="tbps_toolroom.action_tools_category"
      sequence="1"
      groups="base.group_system"
    />
  
  
  </data>
</odoo>


