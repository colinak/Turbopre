<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="view_toolroom_equipment_search" model="ir.ui.view">
      <field name="name">toolroom.equipment.search</field>
      <field name="model">toolroom.equipment</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Toolroom Equipment">
          <field string="Description" name="name"/>
          <field string="Category" name="category_id"/>
          <field string="Make" name="make_id"/>
          <field string="Model" name="model"/>
          <field string="Identification Code" name="identification_code"/>
          <field string="Serial Number" name="serial_number"/>
          <group string="Group By">
            <filter string="Category" name="category" domain="" context="{'group_by': 'category_id'}"/>
            <filter string="Make" name="make" domain="" context="{'group_by': 'make_id'}"/>
          </group>
        </search>
      </field>
    </record>
    
    <record id="view_toolroom_equipment_form" model="ir.ui.view">
      <field name="name">toolroom.equipment.form</field>
      <field name="model">toolroom.equipment</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Toolroom Equipment">
          <sheet>
            <!--<header>-->
              <!--<field name="stage" widget="statusbar" statusbar_visible="available,assigned,discarded"/>-->
            <!--</header>-->
            <div class="oe_title">
              <field name="image" widget="image" class="oe_avatar" />
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" string="Name" placeholder="Equipment Name" style="width: 75%;"/>
              </h1>
            </div>
            <group col="4">
              <field name="category_id" />
              <field name="make_id" />
              <field name="model" />
              <field name="measure" />
              <field name="quadrant" />
              <field name="identification_code" />
              <field name="uom_id" />
              <field name="location" />
              <field name="serial_number" />
              <!--<field name="status" />-->
              <!--<field name="stage" />-->
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_toolroom_equipment_tree" model="ir.ui.view">
      <field name="name">toolroom.equipment.tree</field>
      <field name="model">toolroom.equipment</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Toolroom Equipment">
          <field name="name" string="Name" />
          <field name="category_id" placeholder="Select" />
          <field name="make_id" placeholder="Select" />
          <field name="model" />
          <field name="measure" />
          <field name="quadrant" />
          <field name="identification_code" />
          <field name="uom_id" placeholder="Select" />
          <field name="location" />
          <field name="serial_number" />
        </tree>
      </field>
    </record>

    <record id="action_toolroom_equipment" model="ir.actions.act_window">
      <field name="name">Tools Equipment</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">toolroom.equipment</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_toolroom_equipment_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Tools
        </p>
      </field>
    </record>
  
    <menuitem 
      id="menu_toolroom_equipment_title"
      name="Tools and Equipment"
      parent="tbps_toolroom.menu_toolroom_equipment_root"
      action="tbps_toolroom.action_toolroom_equipment"
      sequence="1"
      groups="base.group_system"
    />
  
  </data>
</odoo>
